<Window x:Class="NeuroSpeech.UIAtoms.Dialogs.AtomAccountsCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ns="clr-namespace:NeuroSpeech.UIAtoms.Controls"
        Title="Calculator" Height="300" Width="300" ShowInTaskbar="False" Topmost="True" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ns:AtomCalculator x:Name="calculator"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="2" x:Name="okButton" Click="okButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="2" x:Name="cancelButton" Click="cancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
