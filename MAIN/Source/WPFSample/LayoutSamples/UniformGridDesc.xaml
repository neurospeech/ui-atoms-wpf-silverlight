<Page x:Class="UIAtoms.WPFSamples.LayoutSamples.UniformGridDesc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
	Title="UniformGridDesc">

    <Grid>
        <FlowDocumentScrollViewer>
            <FlowDocument>
                <List>
                    <ListItem>
                        <Paragraph>	Data items in the Uniform Grid are displayed in a grid of rows and columns as preset. In this sample, the data items are images, and they are configured in a 3 X 3 grid.</Paragraph>
                    </ListItem>
                </List>
                <List>
                    <ListItem>
                        <Paragraph>	The data items are clustered together, and can be spaced out. Use the sliders on the X and Y axes of the grid to provide padding in pixels between the data items, and the spacing is evenly applied throughout the grid.</Paragraph>
                    </ListItem>
                </List>

            </FlowDocument>
        </FlowDocumentScrollViewer>
    </Grid>
</Page>
