<navigation:Page x:Class="UIAtomsDemo.Views.EditorSamples.CurrencyTextBoxSample" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           Title="CurrencyTextBoxSample Page" 
           xmlns:ns="http://uiatoms.neurospeech.com/silverlight">
    
    <Grid x:Name="LayoutRoot">
        <ns:AtomForm 
            LabelWidth="100" 
            Header="CurrencyTextBox" Width="700">
            
            <ns:AtomCurrencyTextBox 
                ns:AtomForm.Label="Currency:" x:Name="current" 
                HorizontalAlignment="Left" Width="200"/>
            
            <TextBlock Name="txtbInstruction" FontWeight="Bold"/>
            
        </ns:AtomForm>
    </Grid>
</navigation:Page>
