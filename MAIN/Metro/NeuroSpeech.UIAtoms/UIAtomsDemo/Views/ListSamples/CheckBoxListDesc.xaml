<navigation:Page x:Class="UIAtomsDemo.Views.ListSamples.CheckBoxListDesc" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="480"
           Title="CheckBoxListDesc Page">
    <Grid x:Name="LayoutRoot">
        <StackPanel>
            <TextBlock Text="•	Selections within the CheckBoxList are returned to the system. They are displayed under the heading of Selected Items."
                       TextWrapping="Wrap" FontWeight="Bold"/>
            <TextBlock Text="•	The selections can appear in any order, either
- In the order selected
- In the order that they appear."
                       TextWrapping="Wrap" FontWeight="Bold"/>
            <TextBlock Text="•	For the purposes of this sample, selections made within the first column will appear above selections made in the second column. However, individual selections in either of the columns will appear in the order in which the selections were made."
                       TextWrapping="Wrap" FontWeight="Bold"/>
        </StackPanel>

    </Grid>
</navigation:Page>
